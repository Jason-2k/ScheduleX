<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.surine.schedulex.ui.view.custom.helper.Topbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="导入小爱课程表" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp20"
        app:layout_constraintTop_toBottomOf="@id/topbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200"
            android:gravity="top"
            android:hint="请在此粘贴小米课程表分享链接" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/parse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp65"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp30"
        android:text="开始解析"
        android:textSize="@dimen/t17"
        app:cornerRadius="@dimen/dp30"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/importMiaiHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:text="不会操作？点我查看教程"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="@id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>